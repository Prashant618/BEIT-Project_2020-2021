<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".busAddlocation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="90dp"
            android:text="Add current location"
            android:textColor="@color/black"
            android:textSize="33dp" />


        <EditText
            android:id="@+id/editText1"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/edshape"
            android:ems="10"
            android:hint="  Select date"
            android:inputType="none"
            android:textIsSelectable="true"
            android:focusable="false"
            android:textColorHint="@color/maroon"
            android:textSize="23dp" />

        <EditText
            android:id="@+id/editText2"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:textSize="23dp"
            android:background="@drawable/edshape"
            android:textColorHint="@color/maroon"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:ems="10"
            android:hint="  Enter longitude"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/editText3"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:textSize="23dp"
            android:background="@drawable/edshape"
            android:textColorHint="@color/maroon"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:ems="10"
            android:hint="  Enter latitude"
            android:inputType="textPersonName" />


        <EditText
            android:id="@+id/editText4"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:textSize="23dp"
            android:background="@drawable/edshape"
            android:textColorHint="@color/maroon"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:ems="10"
            android:hint="  Enter location"
            android:inputType="textPersonName" />


        <EditText
            android:id="@+id/editText5"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:textSize="23dp"
            android:background="@drawable/edshape"
            android:textColorHint="@color/maroon"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:ems="10"
            android:hint="  Select time"
            android:inputType="none"
            android:textIsSelectable="true"
            android:focusable="false" />

        <EditText
            android:id="@+id/editText6"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:textSize="23dp"
            android:background="@drawable/edshape"
            android:textColorHint="@color/maroon"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:ems="10"
            android:hint="  Enter busplate number "
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/editText7"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:textSize="23dp"
            android:background="@drawable/edshape"
            android:textColorHint="@color/maroon"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:ems="10"
            android:hint="  Enter bus number"
            android:inputType="number" />

        <Button
            android:id="@+id/button"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/btn"
            android:backgroundTint="#594C4C"
            android:textColor="@color/white"
            android:text="Add location"
            android:layout_marginBottom="50dp"
            android:textSize="20dp" />


    </LinearLayout>

</ScrollView>