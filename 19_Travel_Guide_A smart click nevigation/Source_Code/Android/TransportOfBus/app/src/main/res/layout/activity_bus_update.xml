<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".busUpdate">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="145dp"
            android:layout_marginTop="90dp"
            android:text="Update"
            android:textColor="@color/black"
            android:textSize="35dp" />

        <EditText
            android:id="@+id/editText"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="50dp"
            android:textSize="23dp"
            android:background="@drawable/edshape"
            android:textColorHint="@color/maroon"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:ems="10"
            android:hint="  Enter bus number"
            android:inputType="number" />


        <EditText
            android:id="@+id/editText1"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="50dp"
            android:textSize="23dp"
            android:background="@drawable/edshape"
            android:textColorHint="@color/maroon"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:ems="10"
            android:hint="  Enter busplate number"
            android:inputType="textPersonName" />


        <EditText
            android:id="@+id/editText2"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="50dp"
            android:textSize="23dp"
            android:background="@drawable/edshape"
            android:textColorHint="@color/maroon"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:ems="10"
            android:hint="  Enter email id"
            android:inputType="textPersonName" />


        <EditText
            android:id="@+id/editText3"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="50dp"
            android:textSize="23dp"
            android:background="@drawable/edshape"
            android:textColorHint="@color/maroon"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:ems="10"
            android:hint="  Enter mobile number"
            android:inputType="number" />


        <EditText
            android:id="@+id/editText4"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="50dp"
            android:textSize="23dp"
            android:background="@drawable/edshape"
            android:textColorHint="@color/maroon"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:ems="10"
            android:hint="  Enter passward"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/button"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/btn"
            android:layout_marginBottom="50dp"
            android:text="Update"
            android:backgroundTint="#594C4C"
            android:textColor="@color/white"
            android:textSize="20dp" />


    </LinearLayout>

</ScrollView>