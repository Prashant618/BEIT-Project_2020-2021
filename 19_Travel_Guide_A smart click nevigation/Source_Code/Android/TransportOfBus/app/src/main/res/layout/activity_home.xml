<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home"
    android:background="#3172BC"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:textColor="@color/white"
        android:textSize="23dp"
        android:text="Choose your task :"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnAddbusloc"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/btnshape"
            android:layout_weight="1"
            android:backgroundTint="#EFC9AF"
            android:textColor="#104C91"
            android:textSize="23dp"
            android:textStyle="bold"
            android:text="Add Bus Location"/>
        <Button
            android:id="@+id/btnUpdatebusloc"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/edshape"
            android:layout_weight="1"
            android:backgroundTint="#EFC9AF"
            android:textSize="23dp"
            android:textStyle="bold"
            android:textColor="#104C91"
            android:text="Update bus location" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="185dp"
        android:layout_marginBottom="50dp"
        android:orientation="horizontal">


        <Button
            android:id="@+id/btnAddbus"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/edshape"
            android:layout_weight="1"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:backgroundTint="#EFC9AF"
            android:textSize="23dp"
            android:textStyle="bold"
            android:textColor="#104C91"
            android:text="Add bus information" />
        <Button
            android:id="@+id/btnUpdateprofile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/edshape"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:backgroundTint="#EFC9AF"
            android:textSize="23dp"
            android:textStyle="bold"
            android:textColor="#104C91"
            android:text="Update profile" />
    </LinearLayout>
